generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Character {
  id          Int                       @id @default(autoincrement())
  name        String
  romaji      String
  gender      Gender
  alias       String?
  age         Int?
  images      String?
  url         String?
  description String?
  comment     String?
  hitokoto    String?
  birthday    DateTime?
  voice       String?
  series      String
  seriesGenre SeriesGenre
  tags        String?
  hairColor   String?
  eyeColor    String?
  bloodType   bloodType?
  height      Int?
  bust        Int?
  waist       Int?
  hip         Int?
  createdAt   DateTime                  @default(now())
  color       String?
  hide        Boolean                   @default(false)
  order       Int                       @default(50)
  songId      Int?
  weight      Int?
  collections CharacterWithCollection[]

  @@unique([id, name])
}

model Collection {
  id          Int                       @id @default(autoincrement())
  name        String
  description String?
  characters  CharacterWithCollection[]

  @@unique([id, name])
}

model CharacterWithCollection {
  id           Int        @id @default(autoincrement())
  characterId  Int
  collectionId Int
  character    Character  @relation(fields: [characterId], references: [id])
  collection   Collection @relation(fields: [collectionId], references: [id])

  @@index([characterId, collectionId], map: "character_collection_index")
  @@index([collectionId], map: "CharacterWithCollection_collectionId_fkey")
}

model Settings {
  id    Int     @id @default(autoincrement())
  key   String
  value String? @db.LongText
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum SeriesGenre {
  ANIME
  COMIC
  GALGAME
  GAME
  NOVEL
  OTHER
}

enum bloodType {
  A
  B
  AB
  O
}
